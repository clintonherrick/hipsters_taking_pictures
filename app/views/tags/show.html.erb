<h1>All Pictures that <%= @tag.name %></h1>


<% if @tag.pictures.length > 1 %>
  <% @tag.pictures.each do |picture| %>
    <%= link_to (image_tag picture.asset.url(:medium)), picture_path(picture) %>
  <% end %>
    <% else %>
  <h2>Congrats You tagged it before it was cool</h2>
    <% @tag.pictures.each do |picture| %>
      <%= link_to (image_tag picture.asset.url(:medium)), picture_path(picture) %>
    <% end %>
  <% end %>
