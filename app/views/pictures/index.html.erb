<div class="row index-space">

  <% @pictures.each do |picture| %>
    <div class="col-md-4 index-pictures">
     <%= link_to (image_tag picture.asset.url(:medium)), picture_path(picture) %>
    </div>
  <% end %>

</div>
<% if user_signed_in? %>
<div class="row index-pictures">
  <%= link_to 'Add a New Pic', new_picture_path, class:"btn btn-primary signup-btn" %>
</div>
<div class="row">

</div>
<% end %>
